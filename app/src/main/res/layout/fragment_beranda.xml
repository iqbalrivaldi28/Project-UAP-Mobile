<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BerandaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:id="@+id/user_bar"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/profil"/>

                    <LinearLayout
                        android:gravity="right"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:fontFamily="@font/pregular"
                            android:text="IqbalApps"
                            android:textColor="#cbccd5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:textColor="#212132"
                            android:layout_height="wrap_content"
                            android:text="M. Iqbal Rivaldi"
                            android:fontFamily="@font/psemibold" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="33dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/pbold"
                    android:text="Temukam makanan\nFavorit Kamu"
                    android:textColor="#212131"
                    android:textSize="22dp"/>

                <EditText
                    android:hint="Cari Makanan dan Minuman"
                    android:textColorHint="#aaaaac"
                    android:textSize="16dp"
                    android:fontFamily="@font/pregular"
                    android:background="@drawable/bg_gray"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="24dp"
                    android:layout_marginTop="24dp"/>


                <!-- Bagian 2       -->
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pbold"
                        android:text="CategorI"
                        android:layout_marginBottom="12dp"
                        android:textColor="#212131"
                        android:textSize="16dp"/>

                    <HorizontalScrollView
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/cate_bread"
                                android:background="@drawable/bg_gray"
                                android:gravity="center_vertical"
                                android:layout_marginRight="16dp"
                                android:orientation="horizontal"
                                android:paddingLeft="5dp"
                                android:paddingRight="18dp"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp">

                                <ImageView
                                    android:layout_marginRight="12dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/cate_bread"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pmedium"
                                    android:text="Roti"
                                    android:textColor="#212131"
                                    android:textSize="16dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cate_healthy"
                                android:background="@drawable/bg_gray"
                                android:gravity="center_vertical"
                                android:layout_marginRight="16dp"
                                android:orientation="horizontal"
                                android:paddingLeft="5dp"
                                android:paddingRight="18dp"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp">

                                <ImageView
                                    android:layout_marginRight="12dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/cate_carrot"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pmedium"
                                    android:text="Sayur"
                                    android:textColor="#212131"
                                    android:textSize="16dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cate_sweets"
                                android:background="@drawable/bg_gray"
                                android:gravity="center_vertical"
                                android:layout_marginRight="16dp"
                                android:orientation="horizontal"
                                android:paddingLeft="5dp"
                                android:paddingRight="18dp"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp">

                                <ImageView
                                    android:layout_marginRight="12dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/cate_donut"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pmedium"
                                    android:text="Donat"
                                    android:textColor="#212131"
                                    android:textSize="16dp"/>

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/cate_test"
                                android:background="@drawable/bg_gray"
                                android:gravity="center_vertical"
                                android:layout_marginRight="16dp"
                                android:orientation="horizontal"
                                android:paddingLeft="5dp"
                                android:paddingRight="18dp"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp">

                                <ImageView
                                    android:layout_marginRight="12dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/cate_carrot"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pmedium"
                                    android:text="Salad"
                                    android:textColor="#212131"
                                    android:textSize="16dp"/>

                            </LinearLayout>


                        </LinearLayout>

                    </HorizontalScrollView>



                </LinearLayout>



                <!-- Bagian 3        -->

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pbold"
                        android:text="Menu Tebaru"
                        android:layout_marginBottom="12dp"
                        android:textColor="#212131"
                        android:textSize="16dp"/>


                    <LinearLayout
                        android:id="@+id/foodOrange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="18dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/tehjahe"/>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pmedium"
                                android:text="Teh Jahe"
                                android:textColor="#212131"
                                android:textSize="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pregular"
                                android:text="Minuman"
                                android:textColor="#cbccd5"
                                android:textSize="14dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pmedium"
                                android:text="4.7"
                                android:layout_marginRight="4dp"
                                android:textColor="#212131"
                                android:textSize="16dp"/>


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_star"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/foodGyoza"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="18dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ayamgeprek"/>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pmedium"
                                android:text="Ayam Geprek"
                                android:textColor="#212131"
                                android:textSize="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pregular"
                                android:text="Makanan"
                                android:textColor="#cbccd5"
                                android:textSize="14dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pmedium"
                                android:text="4.7"
                                android:layout_marginRight="4dp"
                                android:textColor="#212131"
                                android:textSize="16dp"/>


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_star"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/foodAvocado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="18dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/soto"/>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pmedium"
                                android:text="Soto Ayam"
                                android:textColor="#212131"
                                android:textSize="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pregular"
                                android:text="Makanan"
                                android:textColor="#cbccd5"
                                android:textSize="14dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pmedium"
                                android:text="4.7"
                                android:layout_marginRight="4dp"
                                android:textColor="#212131"
                                android:textSize="16dp"/>


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_star"/>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/foodTeh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="18dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/kwitiaw"/>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pmedium"
                                android:text="Kwitiaw"
                                android:textColor="#212131"
                                android:textSize="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pregular"
                                android:text="Makanan"
                                android:textColor="#cbccd5"
                                android:textSize="14dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pmedium"
                                android:text="4.6"
                                android:layout_marginRight="4dp"
                                android:textColor="#212131"
                                android:textSize="16dp"/>


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_star"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>








</ScrollView>