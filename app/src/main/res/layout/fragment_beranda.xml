<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BerandaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:id="@+id/user_bar"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/profilpolinela"/>

                    <LinearLayout
                        android:gravity="right"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:fontFamily="@font/pregular"
                            android:text="MyApps"
                            android:textColor="#cbccd5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:textColor="#212132"
                            android:layout_height="wrap_content"
                            android:text="Wonderfull Polinela"
                            android:fontFamily="@font/psemibold" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="33dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/pbold"
                    android:text="Selamat Datang Di\nWonderfull Polinela Apps"
                    android:textColor="#212131"
                    android:textSize="22dp"/>




                <!-- Bagian 2       -->
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pbold"
                        android:text="Visi dan Misi"
                        android:layout_marginBottom="12dp"
                        android:textColor="#212131"
                        android:textSize="16dp"/>

                    <HorizontalScrollView
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/cate_bread"
                                android:background="@drawable/bg_gray"
                                android:gravity="center"
                                android:layout_marginRight="16dp"
                                android:orientation="horizontal"
                                android:paddingLeft="5dp"
                                android:paddingRight="18dp"
                                android:layout_width="160dp"
                                android:layout_height="50dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pmedium"
                                    android:textAlignment="center"
                                    android:text="Sejarah Polinela"
                                    android:textColor="#212131"
                                    android:textSize="16dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cate_bread2"
                                android:background="@drawable/bg_gray"
                                android:gravity="center"
                                android:layout_marginRight="16dp"
                                android:orientation="horizontal"
                                android:paddingLeft="5dp"
                                android:paddingRight="18dp"
                                android:layout_width="160dp"
                                android:layout_height="50dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pmedium"
                                    android:text="Visi Polinela"
                                    android:textAlignment="center"
                                    android:textColor="#212131"
                                    android:textSize="16dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cate_healthy"
                                android:layout_width="160dp"
                                android:layout_height="50dp"
                                android:layout_marginRight="16dp"
                                android:background="@drawable/bg_gray"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="5dp"
                                android:paddingRight="18dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pmedium"
                                    android:text="Misi Polinela"
                                    android:textColor="#212131"
                                    android:textSize="16dp" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/cate_healthy2"
                                android:layout_width="160dp"
                                android:layout_height="50dp"
                                android:layout_marginRight="16dp"
                                android:background="@drawable/bg_gray"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="5dp"
                                android:paddingRight="18dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pmedium"
                                    android:text="Tujuan Strategis"
                                    android:textColor="#212131"
                                    android:textSize="16dp" />

                            </LinearLayout>


                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>



                <!-- Bagian 3        -->

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pbold"
                        android:text="Jurusan Di Polinela"
                        android:layout_marginBottom="12dp"
                        android:textColor="#212131"
                        android:textSize="16dp"/>


                    <LinearLayout
                        android:id="@+id/foodOrange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gray"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="18dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/himapa"/>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pmedium"
                                android:text="Budidaya Tanaman Pangan"
                                android:textColor="#212131"
                                android:textSize="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pregular"
                                android:text="Minuman"
                                android:textColor="#cbccd5"
                                android:textSize="14dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/foodGyoza"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gray"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="18dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/himabun"/>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pmedium"
                                android:text="Budidaya Tanaman Perkebunan"
                                android:textColor="#212131"
                                android:textSize="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pregular"
                                android:text="Makanan"
                                android:textColor="#cbccd5"
                                android:textSize="14dp"/>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/foodAvocado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gray"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="18dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/tektan"/>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pmedium"
                                android:text="Teknologi Pertanian"
                                android:textColor="#212131"
                                android:textSize="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pregular"
                                android:text="Makanan"
                                android:textColor="#cbccd5"
                                android:textSize="14dp"/>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/foodTeh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gray"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="18dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ternak"/>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pmedium"
                                android:text="Peternakan"
                                android:textColor="#212131"
                                android:textSize="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pregular"
                                android:text="Makanan"
                                android:textColor="#cbccd5"
                                android:textSize="14dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/foodTeh2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gray"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="18dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ekbis"/>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pmedium"
                                android:text="Ekonomi dan Bisnis"
                                android:textColor="#212131"
                                android:textSize="16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pregular"
                                android:text="Makanan"
                                android:textColor="#cbccd5"
                                android:textSize="14dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>








</ScrollView>