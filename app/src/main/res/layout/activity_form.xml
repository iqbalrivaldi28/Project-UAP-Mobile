<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    tools:context=".FormActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="50dp"
        android:textAlignment="center"
        android:fontFamily="@font/pbold"
        android:text="Form Pemesanan\nMakanan dan Minuman"
        android:textColor="#212131"
        android:textSize="22dp"/>

    <EditText
        android:id="@+id/editnama"
        android:inputType="textPersonName"
        android:hint="Masukan Nama"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editphone"
        android:inputType="phone"
        android:hint="Masukan No Hp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editalamat"
        android:inputType="text"
        android:hint="Masukan Alamat"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editpesan"
        android:gravity="top|left"
        android:hint="Masukan Detail Pesanan"
        android:layout_width="match_parent"
        android:layout_height="130dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/formbtn"
        android:background="@drawable/bg_btn_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Pesan Sekarang"
        android:textColor="#fff"
        android:textSize="16dp"
        android:fontFamily="@font/psemibold"
        android:textAllCaps="false"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp" />

</LinearLayout>